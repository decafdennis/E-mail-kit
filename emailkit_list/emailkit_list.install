  $schema['emailkit_list'] = array(
    'description' => 'Contains information about e-mail lists.',
    'fields' => array(
      'lid' => array(
        'description' => 'The list identifier.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'name' => array(
        'description' => 'The list name.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
      ),
      'weight' => array(
        'description' => 'The list weight.',
