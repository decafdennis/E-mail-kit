        'size' => 'tiny',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('lid'),
  );
  
  $schema['emailkit_list_subscriber'] = array(
    'description' => 'Contains information about subscribers.',
    'fields' => array(
      'sid' => array(
        'description' => 'The subscriber identifier.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
